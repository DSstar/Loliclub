<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loliclub.bluetoothtools.activity.MainActivity">

    <include layout="@layout/toolbar" />

    <ListView
        android:id="@id/main_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar"/>

    <Button
        android:id="@id/main_btn_add"
        android:layout_width="@dimen/button_flat"
        android:layout_height="@dimen/button_flat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/btn_main_add"
        android:elevation="@dimen/elevation_first"/>

</RelativeLayout>
