<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_singleline_with_img"
    android:gravity="center_vertical"
    android:orientation="horizontal">

        <TextView
            android:id="@id/list_content_sub"
            android:layout_width="@dimen/list_singleline_img"
            android:layout_height="@dimen/list_singleline_img"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical|center_horizontal"
            android:background="@drawable/bg_number_circle"
            android:textColor="@color/text_black_main"
            android:textSize="@dimen/subhead" />

        <TextView
            android:id="@id/list_content_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textColor="@color/text_black_main"
            android:textSize="@dimen/subhead" />

    </LinearLayout>