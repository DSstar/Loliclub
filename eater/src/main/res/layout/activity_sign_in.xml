<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loliclub.eater.activity.SignInActivity">

    <LinearLayout
        android:id="@id/signActivity_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@id/statusbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height"
            android:background="@color/color_primary" />

        <include layout="@layout/toolbar" />

    </LinearLayout>

    <LinearLayout
        android:id="@id/signActivity_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signActivity_header"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_singleline"
            android:gravity="center_vertical"
            android:text="@string/signActivity_signIn"
            android:inputType="text"
            android:textColor="@color/text_black_main"
            android:textSize="@dimen/abc_text_size_title_material"/>

        <TextView
            android:id="@id/signActivity_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signActivity_name"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:visibility="invisible"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signActivity_name"
            android:inputType="textPassword"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColorHint="@color/text_black_sub"/>

        <TextView
            android:id="@id/signActivity_password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signActivity_passwrod"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:visibility="invisible"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signActivity_passwrod"
            android:textSize="@dimen/abc_text_size_subhead_material"
            android:textColorHint="@color/text_black_sub"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_singleline"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center_vertical"
            android:text="@string/signActivity_signup_tips"
            android:textSize="@dimen/abc_text_size_caption_material"
            android:textColor="@color/color_primary"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@id/signActivity_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_singleline"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/color_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="@string/signActivity_signIn"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:textColor="@color/text_white_main"/>

    </RelativeLayout>

</RelativeLayout>
